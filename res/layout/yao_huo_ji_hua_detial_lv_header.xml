<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="#CCCCCC"
            android:gravity="center_vertical"
            android:text="DocEntry:" />

        <TextView
            android:id="@+id/tv_DocEntry"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:text="12312dasdf" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="#CCCCCC"
            android:gravity="center_vertical"
            android:text="DocStatus:" />

        <TextView
            android:id="@+id/tv_DocStatus"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:text="12312dasdf" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="#CCCCCC"
            android:gravity="center_vertical"
            android:text="MallCode:" />

        <TextView
            android:id="@+id/tv_MallCode"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:text="12312dasdf" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="#CCCCCC"
            android:gravity="center_vertical"
            android:text="MallName:" />

        <TextView
            android:id="@+id/tv_MallName"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:text="12312dasdf" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="#CCCCCC"
            android:gravity="center_vertical"
            android:text="IsAudit:" />

        <TextView
            android:id="@+id/tv_IsAudit"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:text="12312dasdf" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="#CCCCCC"
            android:gravity="center_vertical"
            android:text="单据日期:" />

        <EditText
            android:id="@+id/et_DocDate"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="6"
            android:background="@null"
            android:editable="false"
            android:gravity="center_vertical"
            android:text="12312dasdf"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/line_color" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="#CCCCCC"
            android:gravity="center_vertical"
            android:text="到货日期:" />

        <EditText
            android:id="@+id/et_recDate"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="6"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="12312dasdf"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CCCCCC"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="48dip"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:background="#969696" />

            <TextView
                android:id="@+id/tv1"
                style="@style/yao_huo_section_tv_style"
                android:text="序号" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="48dip"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:background="#969696" />

            <TextView
                android:id="@+id/tv2"
                style="@style/yao_huo_section_tv_style"
                android:text="单品号" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="48dip"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:background="#969696" />

            <TextView
                android:id="@+id/tv3"
                style="@style/yao_huo_section_tv_style"
                android:text="品名" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="48dip"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <View
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:background="#969696" />

            <TextView
                android:id="@+id/tv4"
                style="@style/yao_huo_section_tv_style"
                android:text="数量" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="48dip"
            android:layout_weight="2" >

            <View
                android:id="@+id/right_line"
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:background="#969696" />

            <View
                android:id="@+id/left_line"
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:background="#969696" />

            <TextView
                android:id="@+id/tv5"
                style="@style/yao_huo_section_tv_style"
                android:layout_toLeftOf="@id/right_line"
                android:layout_toRightOf="@id/left_line"
                android:text="单位" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>