        android:gravity="center_vertical"
        android:text="DocEntry:" />

    <TextView
        android:id="@+id/tv_value"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="6"
        android:gravity="center_vertical"
        android:text="12312dasdf" />

</LinearLayout>