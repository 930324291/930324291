<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="NTheme" parent="android:Theme.Light.NoTitleBar"></style>

    <style name="NoActionBarTheme" parent="NTheme"></style>

    <style name="yao_huo_section_tv_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingBottom">4dip</item>
        <item name="android:paddingTop">4dip</item>
    </style>

    <style name="yao_huo_lv_item_tv_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dip</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">4dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">4dip</item>
    </style>

    <style name="you_huo_add_et_style">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">32dip</item>
        <item name="android:layout_marginRight">1px</item>
        <item name="android:layout_marginBottom">1px</item>
        <item name="android:layout_weight">2</item>
        <item name="android:padding">1dip</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>